{
  "name": "gatsby-wordpress-developers",
  "private": true,
  "description": "Gatsby frontend for WordPress developers database",
  "version": "0.1.0",
  "license": "0BSD",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop --host 0.0.0.0",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepare": "cd .. && husky install",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:staged": "lint-staged",
    "test": "jest --testPathIgnorePatterns=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "audit": "npm audit"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.27.1",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.57.1",
    "gatsby": "^5.13.4",
    "gatsby-plugin-image": "^3.15.0",
    "gatsby-plugin-manifest": "^5.15.0",
    "gatsby-plugin-react-helmet": "^6.15.0",
    "gatsby-plugin-sharp": "^5.15.0",
    "gatsby-plugin-styled-components": "^6.15.0",
    "gatsby-plugin-sitemap": "^5.15.0",
    "gatsby-plugin-robots-txt": "^1.8.0",
    "gatsby-source-wordpress": "^7.16.0",
    "gatsby-transformer-sharp": "^5.15.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "styled-components": "^6.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "public/*.js",
      "limit": "170 KB"
    },
    {
      "path": "public/*.css",
      "limit": "50 KB"
    }
  ]
}
